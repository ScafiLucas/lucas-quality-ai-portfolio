{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Run FastAPI with Uvicorn",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload"
      ],
      "jinja": true,
      "console": "integratedTerminal",
      "env": {
        "DATABASE_URL": "postgresql://postgres:postgres@localhost:5432/lucas_quality_ai",
        "PGCLIENTENCODING": "utf8"
      }
    }
  ]
}
 